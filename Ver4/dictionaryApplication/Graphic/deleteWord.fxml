<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #3D4956 #3D4956 #3D4956 #3D4956;" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dictionaryApplication.Graphic.deleteWordController">
   <children>
      <VBox prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="CENTER" prefHeight="18.0" prefWidth="800.0" text="Choose data to delete" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <TextField fx:id="searchDelete" alignment="TOP_LEFT" prefHeight="26.0" prefWidth="359.0" promptText="Search to delete">
                     <effect>
                        <Lighting>
                           <bumpInput>
                              <Shadow />
                           </bumpInput>
                           <light>
                              <Light.Distant />
                           </light>
                        </Lighting>
                     </effect></TextField>
                  <Button fx:id="searchButton" alignment="CENTER" mnemonicParsing="false" onAction="#handleSearchButton" style="-fx-background-color: orange;" text="Search" />
               </children>
            </HBox>
            <ListView fx:id="listView" prefHeight="402.0" prefWidth="600.0">
               <VBox.margin>
                  <Insets left="100.0" right="100.0" top="10.0" />
               </VBox.margin>
               <effect>
                  <Lighting>
                     <bumpInput>
                        <Shadow />
                     </bumpInput>
                     <light>
                        <Light.Distant />
                     </light>
                  </Lighting>
               </effect>
            </ListView>
            <Region prefHeight="58.0" prefWidth="800.0" />
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Button layoutX="81.0" layoutY="29.0" mnemonicParsing="false" onAction="#handleSaveButton" prefHeight="64.0" prefWidth="272.0" style="-fx-background-color: orange;" text="Delete">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="cancelButton" layoutX="434.0" layoutY="29.0" mnemonicParsing="false" onAction="#handleCancelButton" prefHeight="64.0" prefWidth="272.0" style="-fx-background-color: orange;" text="Cancel">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </AnchorPane>
            <HBox prefHeight="100.0" prefWidth="200.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
